<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Falhub Admin - <%- title %>
    </title>

    <!-- Custom fonts for this template -->
    <link href="/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/admin/css/sb-admin-2.min.css" rel="stylesheet">
    <!-- chat css -->
    <link href="/admin/css/chat.css" rel="stylesheet">


    <!-- Custom styles for this page -->
    <link href="/admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <%- body %>

        <!-- Bootstrap core JavaScript-->
        <script src="/admin/vendor/jquery/jquery.min.js"></script>
        <script src="/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="/admin/vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="/admin/js/sb-admin-2.min.js"></script>

        <!-- Page level plugins -->
        <script src="/admin/vendor/datatables/jquery.dataTables.min.js"></script>
        <script src="/admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

        <!-- Page level custom scripts -->
        <script src="/admin/js/demo/datatables-demo.js"></script>
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="/admin/ajax/ajax.js"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script>
            $(document).ready(() => {
                $('#chat-content').animate({ scrollTop: 9999 }, 1000)
                const socket = io("http://localhost:3000");
                socket.on('disconnect', () => { socket.removeAllListeners("message") })
                socket.on("message", (res) => {
                    if (res) {
                        $(`#${res.key}`).remove()
                        if (res.msg.fromWho == 'user') {
                            return (
                                $('#chat-content').append(
                                    `<div id=${res.key}  class="mt-2 ml-3" align="left">
                                    <p style="max-width: 50%;" class="btn btn-primary">${res.msg.message}<span style="color: black; font-size: 10px; padding-left: 10px; padding-top: 10px;">Ãœye / ${res.msg.time}</span></p>
                                    </div>`
                                )
                            )
                        } else {
                            return (
                                $('#chat-content').append(
                                    `<div id=${res.key} class="mt-2 mr-3" align="right">
                                    <p style="max-width: 50%;" class="btn btn-success">${res.msg.message}<span style="color: black; font-size: 10px; padding-left: 10px; padding-top: 10px;">Admin / ${res.msg.time}</span></p>
                                    </div>`
                                )
                            )
                        }
                    }
                });
                $(`#sendMessage`).click(() => {
                    let msg = $(`#message`).val()
                    if (msg.length >= 1) {
                        setTimeout(() => $('#chat-content').animate({ scrollTop: 9999 }, 500), 500)
                        socket.emit('remessage', msg)
                        $(`#message`).val("")
                    }
                })

                $(`.deleteAllMessages`).click(function () {
                    socket.emit('deletemsg', this.id)
                    socket.on('deletemsg', (res) => {
                        if (res.success) {
                            Swal.fire('Mesajlar Silindi')
                            window.location.href = '/staff/admin/livechat'
                        } else {
                            Swal.fire('Hata.!')
                        }
                    })

                })

            })
        </script>
</body>

</html>
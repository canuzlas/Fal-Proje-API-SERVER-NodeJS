<!-- Page Wrapper -->
<div id="wrapper">

   <!-- Sidebar -->
   <%- include('./components/sidebar.ejs') %>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">

         <!-- Main Content -->
         <div id="content">

            <!-- Topbar -->
            <%- include('./components/topbar.ejs') %>
               <!-- End of Topbar -->

               <!-- Begin Page Content -->
               <div class="container-fluid">

                  <!-- Page Heading -->
                  <h1 class="h3 mb-2 text-gray-800">Falları Yorumla</h1>

                  <!-- DataTales Example -->
                  <div class="card shadow mb-4">
                     <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Yorumlanmamış Fallar</h6>
                     </div>
                     <div class="card-body">
                        <div class="table-responsive">
                           <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                              <thead>
                                 <tr>
                                    <th>Kullanıcı</th>
                                    <th>Fotoğraflar</th>
                                    <th>Kaç dakika oldu</th>
                                    <th>Yorum</th>
                                 </tr>
                              </thead>
                              <tbody>
                                 <% fallar.forEach(fal=> { %>
                                    <tr>
                                       <td>
                                          <%-fal.u_id%>
                                       </td>
                                       <td>
                                          <div align="center">
                                             <% fal.photos.forEach(photo=> { %>
                                                <img width="30" height="30" src="/<%-photo%>" alt="<%-photo%>">
                                             <% }) %>
                                          </div>
                                       </td>
                                       <td>
                                          <%- parseInt((Date.now()-new Date(fal.createdAt))/1000/60)+' Dakika' %> 
                                       </td>
                                       <td>
                                          <a href="/staff/admin/commitfor?id=<%-fal._id%>">
                                             <button class="btn btn-success">Yorum Yap</button>
                                          </a>
                                       </td>
                                    </tr>
                                    <% }) %>
                              </tbody>
                           </table>
                        </div>
                     </div>
                  </div>

               </div>
               <!-- /.container-fluid -->

         </div>
         <!-- End of Main Content -->

         <!-- Footer -->
         <footer class="sticky-footer bg-white">
            <div class="container my-auto">
               <div class="copyright text-center my-auto">
                  <span>Copyright &copy; Tüm hakları saklıdır. 2022</span>
               </div>
            </div>
         </footer>
         <!-- End of Footer -->

      </div>
      <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
   <i class="fas fa-angle-up"></i>
</a>



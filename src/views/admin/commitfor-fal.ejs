<!-- Page Wrapper -->
<div id="wrapper">

   <!-- Sidebar -->
   <%- include('./components/sidebar') %>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
         <!-- Main Content -->
         <div id="content">
            <!-- Topbar -->
            <%- include('./components/topbar.ejs') %>
               <!-- End of Topbar -->

               <!-- Begin Page Content -->
               <div class="container-fluid d-flex justify-content-center">

                  <div class="row">
                     <div class="col-12 justify-content-center text-center">
                        <% fal.photos.forEach(photo=> { %>
                           <a target="_blank" href="/<%-photo%>">
                              <img width="150" height="150" src="/<%-photo%>" alt="">
                           </a>
                           <% }) %>
                     </div>
                     <div class="col-12 justify-content-center text-center">
                        <p style="font-size: large; margin-top:20px">Fal Sahibi: <%-user.name%>
                        </p>
                     </div>
                     <div class="col-12 justify-content-center text-center">
                        <textarea id="yorum" cols="50" rows="5"></textarea>
                     </div>
                     <div class="col-12 justify-content-center text-center">
                        <button id="<%-fal._id%>" class="btn btn-primary commitButton">Yorum Yap</button>
                     </div>
                  </div>

               </div>
               <!-- /.container-fluid -->
         </div>
         <!-- End of Main Content -->

         <!-- Footer -->
         <footer class="sticky-footer bg-white">
            <div class="container my-auto">
               <div class="copyright text-center my-auto">
                  <span>Copyright &copy; Tüm hakları saklıdır. 2022</span>
               </div>
            </div>
         </footer>
         <!-- End of Footer -->

      </div>
      <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
   <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
   aria-hidden="true">
   <div class="modal-dialog" role="document">
      <div class="modal-content">
         <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Çıkış yapıyorsun?</h5>
            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
               <span aria-hidden="true">×</span>
            </button>
         </div>
         <div class="modal-body">Eğer "çıkış yap" butonuna tıklarsan, bu sayfaya girebilmek için tekrar giriş
            yapman gerekir.</div>
         <div class="modal-footer">
            <button class="btn btn-secondary" type="button" data-dismiss="modal">iptat</button>
            <a class="btn btn-primary" href="/staff/admin/logout">çıkış yap</a>
         </div>
      </div>
   </div>
</div>
<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    <%- include('./components/sidebar.ejs') %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include('./components/topbar.ejs') %>
                    <!-- End of Topbar -->

                    <!-- Begin Page Content -->
                    <div class="container-fluid">

                        <!-- Page Heading -->
                        <h1 class="h3 mb-2 text-gray-800">Tüm Aktiviteler</h1>

                        <!-- DataTales Example -->
                        <div class="card shadow mb-4">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Tarih</th>
                                                <th>İşlem Türü</th>
                                                <th>İşlemi Yapan</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% activities.forEach((activity,index)=> { %>
                                                <tr class="tr">
                                                    <td>
                                                        <%-index+1%>
                                                    </td>
                                                    <td>
                                                        <%-activity.createdAt%>
                                                    </td>
                                                    <td>
                                                        <%-activity.action%>
                                                    </td>
                                                    <td>
                                                        <%-activity.who%>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Tüm hakları saklıdır. 2022</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>


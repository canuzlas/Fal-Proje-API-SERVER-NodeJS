<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Bildirim Yolla</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="notificationText">Bildirim Mesajı</label>
            <input type="email" class="form-control" id="notificationText" aria-describedby="emailHelp"
              placeholder="Bildirim mesajınız">
            <small id="emailHelp" class="form-text text-muted">Kullanıcıya gösterilecek mesaj.</small>
          </div>
          <div class="form-group">
            <div class="col-12">
              <label for="notificationType">Bildirim Tipi</label>
              <select id="notificationType">
                <option value="normal">Normal</option>
                <option value="warning">Uyarı</option>
                <option value="danger">Tehlike</option>
              </select>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button id="closeModal" type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
        <button id="sendNotiButton" type="button" class="btn btn-primary">Yolla</button>
      </div>
    </div>
  </div>
</div>